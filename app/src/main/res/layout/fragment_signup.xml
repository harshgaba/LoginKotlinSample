<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
>

    <data>
        <variable
                name="viewModel"
                type="com.harshgaba.loginkotlinsample.ui.users.UsersListViewModel"/>
    </data>
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true">

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/signup_layout_padding_top"
                    android:paddingLeft="@dimen/signup_layout_padding_left"
                    android:paddingRight="@dimen/signup_layout_padding_right">

                <ImageView android:src="@drawable/icon_map_vector"
                           android:layout_width="wrap_content"
                           android:layout_height="@dimen/signup_app_icon_height"
                           android:layout_marginBottom="@dimen/signup_app_icon_margin_bottom"
                           android:layout_gravity="center_horizontal"/>

                <!-- Name Label -->
                <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/signup_input_margin_top"
                        android:layout_marginBottom="@dimen/signup_input_margin_bottom">
                    <EditText android:id="@+id/input_name"
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:inputType="textPersonName"
                              android:hint="@string/hint_user_name"/>
                </android.support.design.widget.TextInputLayout>


                <!--  Email Label -->
                <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/signup_input_margin_top"
                        android:layout_marginBottom="@dimen/signup_input_margin_bottom">
                <EditText android:id="@+id/input_email"
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:inputType="textEmailAddress"
                              android:hint="@string/hint_email"/>
                </android.support.design.widget.TextInputLayout>

                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/rl_layout_country_selected"
                        android:layout_marginTop="@dimen/signup_input_margin_top"
                        android:layout_marginBottom="@dimen/signup_input_margin_bottom">

                <ImageView
                            android:id="@+id/imageview_country_icon"
                            android:layout_width="@dimen/country_icon_width"
                            android:layout_height="@dimen/country_icon_height"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:scaleType="centerInside"/>

                    <TextView
                            android:id="@+id/textview_selected_country"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/country_text_margin_start"
                            android:layout_marginLeft="@dimen/country_text_margin_left"
                            android:layout_marginEnd="?android:listPreferredItemPaddingEnd"
                            android:layout_marginRight="?android:listPreferredItemPaddingRight"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body2"/>

                </RelativeLayout>

                <!-- Password Label -->
                <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/signup_input_margin_top"
                        android:layout_marginBottom="@dimen/signup_input_margin_bottom">
                    <EditText android:id="@+id/input_password"
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:inputType="textPassword"
                              android:hint="@string/hint_password"/>
                </android.support.design.widget.TextInputLayout>

                <!-- Password Re-enter Label -->
                <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/signup_input_margin_top"
                        android:layout_marginBottom="@dimen/signup_input_margin_bottom">
                    <EditText android:id="@+id/input_reEnterPassword"
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:inputType="textPassword"
                              android:hint="@string/hint_re_password"/>
                </android.support.design.widget.TextInputLayout>

                <!-- Signup Button -->
                <android.support.v7.widget.AppCompatButton
                        android:id="@+id/bottom_signup"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/signup_button_margin_top"
                        android:layout_marginBottom="@dimen/signup_button_margin_bottom"
                        android:padding="@dimen/signup_button_padding"
                        android:text="@string/create_account"/>

                <TextView android:id="@+id/textview_link_login"
                          android:layout_width="fill_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginBottom="@dimen/signup_button_margin_bottom"
                          android:text="@string/label_already_member"
                          android:gravity="center"
                          android:textSize="@dimen/already_account_label_text_size"/>

            </LinearLayout>
        </ScrollView>
    </android.support.constraint.ConstraintLayout>
</layout>